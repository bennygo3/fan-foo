generator client {
  provider = "prisma-client-js"
  seed     = "node seeds/seed.js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   
  createdAt DateTime @default(now())
}

model Team {
  id      Int      @id @default(autoincrement())
  abbr    String   @unique
  name    String
  players Player[]
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String
  position  String
  teamId    Int?
  team      Team?    @relation(fields: [teamId], references: [id])

  externalId   String? 
  externalSrc  String?
  projPts      Float?
  adp          Float?
  lastSyncedAt DateTime?

  @@index([name])
  @@index([position])
  @@index([teamId, position])
  @@index([externalSrc, externalId])
}


